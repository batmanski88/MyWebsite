@model Contact
<div class="row">
    <form method="POST" class="form-horizontal">
        <div class="form-group col-md-6">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-8">
                <input type="email" asp-for="Email"/>
                <span asp-validation-for="Email" />
            </div>
        </div>
         <div class="form-group col-md-6">
            <label asp-for="Subject" class="col-md-2"></label>
            <div class="col-md-8">
                <input type="text" asp-for="Subject"/>
                <span asp-validation-for="Subject" />
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Text" class="col-md-2"></label>
            <div class="col-md-12">
                <input type="text" asp-for="Text"/>
                <span asp-validation-for="Text" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary"></button>
    </form>
</div>